extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  div#dfa-policy-issue.ui.segments
    div.ui.segment
      h1.ui.header.center.aligned POLICY ISSUE
      div.ui.divider
      h2.ui.header.center.aligned
        span(style="color:#CC0505;") Legalize Sex Work 
        | in the 
        span(style="color:#2185D0;") United States
      div.dfa-share(style="padding-bottom:1em; text-align:center;")
        div.ui.grey.email.button.circular.icon
          i.icon.mail
        div.ui.facebook.button.circular.icon
          i.ui.facebook.icon
        div.ui.twitter.button.circular.icon
          i.ui.twitter.icon
    div.ui.segment
      h3.ui.header Sponsored By:
      div.ui.horizontal.list.massive
