extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  div.ui.segment.dfa-team
    h1.ui.header.aligned.center= page.title
    div.ui.divider
    article.page
      include teamGrid
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.founder || p.boardOfDirectors || p.editorialBoard; });
      mixin teamGrid(people)
      h1 Advisors
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.advisor; });
      mixin teamGrid(people)
      h1 Staff
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.staff; });
      mixin teamGrid(people, "staff")
