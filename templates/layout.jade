doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='icon', href=contents['favicon.png'].url)
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml')
      != nap.css('main')
  body(class=bodyclass)
    header
      block header

        div#dfa-cover

        div#dfa-header.ui.borderless.inverted.main.menu.fixed
          div.ui.container
            div.ui.dropdown.icon.item
              i.big.sidebar.icon
              div.menu
                a.item(href="/") Stories
                a.item(href="/about/") About Data4America
                a.item(href="/team/") Our Team
                a.item(href="/staff") Staff
                a.item(href="/upload/") Submit Content
                a.item(href="http://data.data4america.org/") Submit Data
                a.item(href="http://git.data4america.org/") Submit Software
                a.item(href="/donate/") Donate
                a.item(href="/request-government-data") Request Data
            div.logo.item
              a.logo(href="/")
            div.right.menu.social-buttons
              div.item
                button.dfa-btn-subscribe.ui.button.red.mini Subscribe
              div.item
                button.dfa-btn-donate.ui.button.white.mini(style="background:#FFF;") Donate
              div.item
                button.dfa-btn-share.ui.button.blue.mini Share

        div#dfa-slogan Bringing Data Science to the study of Politics

        div#dfa-menu.ui.small.main.menu
          div.ui.text.container
            a.item(href="/", target="blank") STORIES
            a.item(href="/about/", target="blank") ABOUT
            a.item(href="/team/", target="blank") OUR TEAM
            a.item(href="/donate/", target="blank") DONATE
            a.item(href="/upload/", target="blank") SUBMIT CONTENT
            a.item(href="http://data.data4america.org/", target="blank") DATA SETS
            a.item(href="http://git.data4america.org/", target="blank") GITHUB

        div#dfa-menu-mobile
          div.ui.text.container
            div.ui.small.main.menu.four.item
                a.item(href="/", target="blank") STORIES
                a.item(href="/about/", target="blank") ABOUT
                a.item(href="/team/", target="blank") OUR TEAM
                a.item(href="/donate/", target="blank") DONATE
            div.ui.small.main.menu.second.three.item
                a.item(href="http://data4america.org/upload", target="blank") SUBMIT CONTENT
                a.item(href="http://data4america.org/datasets", target="blank") DATA SETS
                a.item(href="http://data4america.org/github", target="blank") GITHUB

    div#dfa-subscribe-modal.ui.modal.small
      i.close.icon
      div.content
        div.ui.two.column.grid
          div.column
            h3.ui.header Like us on Facebook
            div.fb-like(data-href='http://data4america.org/', data-layout='button_count', data-action='like', data-show-faces='false', data-share='false')
          div.column
            h3.ui.header Follow us on Twitter
            a.twitter-follow-button(href='https://twitter.com/data4america', data-show-count='true', data-show-screen-name='false') Follow
        div.ui.horizontal.divider OR
        h3.ui.header Receive new Data4America stories by e-mail
        div#mc_embed_signup
          form.ui.form.validate#mc-embedded-subscribe-form(action="//data4ameria.us11.list-manage.com/subscribe/post?u=72207b8a0819659d0b69c1f9c&amp;id=219ac0990b" method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate)
            div#mc_embed_signup_scroll
              div.field
                <input type="email" value="" name="EMAIL" placeholder="Your Email Address" class="required email form-control" id="mce-EMAIL">
              div.clear#mce-responses
                <div class="response text-danger" id="mce-error-response" style="display:none; margin-bottom: 1em"></div>
                <div class="response text-success" id="mce-success-response" style="display:none; margin-bottom: 1em"></div>
              <div style="position: absolute; left: -5000px;"><input type="text" name="b_72207b8a0819659d0b69c1f9c_219ac0990b" tabindex="-1" value=""></div>
              button.ui.button.primary#mc-embedded-subscribe(type="submit" name="subscribe") Subscribe

    div#dfa-content
      div.ui.text.container
        block content
        block footer

    div#dfa-footer(style="display:none;")
      h3.ui.header
        a.ui.red.button.donate.dfa-btn-donate Donate
        span Help 
          span.footer-blue DATA
          span.footer-red 4
          span.footer-blue AMERICA 
          | bring data science to politics.

    div#dfa-donate-modal.ui.modal(style="min-height:1200px;")
      i.close.icon
      div.content
        div.body-text

    div#dfa-share-modal.ui.small.modal
      i.close.icon
      div.header Share Story
      div.content
        div.description
          div.dfa-share(style="text-align:center;")
            div.container
              a(href='mailto:?subject=' + (page !== undefined ? page.title : locals.name) + '&body=' + encodeURI(locals.url + (page !== undefined ? page.url : '')))
                div.ui.grey.email.button
                  i.icon.mail
                  span.text Email
              div.ui.facebook.button
                i.ui.facebook.icon
                span.text Share
              div.ui.twitter.button
                i.ui.twitter.icon
                span.text Tweet

            div.container.mobile(style="display:none;")
              div.ui.grey.email.button.circular.icon
                i.icon.mail
              div.ui.facebook.button.circular.icon
                i.ui.facebook.icon
              div.ui.twitter.button.circular.icon
                i.ui.twitter.icon
              a.circular.ui.icon.button.orange(href="javascript:;")
                i.icon-sms

          h4.ui.header Link:
          div.ui.action.input.fluid
            input#cliptext(type="text", value="http://test.data4america.org/geography-american-jobs/")
            button.copy-button.ui.button.icon(data-clipboard-target="#cliptext")
              i.icon.copy

      div.actions
        div.ui.cancel.button Cancel

  block js
    != nap.js('main')
