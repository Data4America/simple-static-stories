doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href=contents.css['bootstrap.min.css'].url)
      link(rel='stylesheet', href=contents.css['d4a.css'].url)
  body(class=bodyclass)
    header.header
      block header
        a(href='/')
          img.logo(src=contents.img['header.png'].url)
        div.container
          p.description= locals.description
    div#content
      div.container
        block content
          h2 Welcome to zombocom!
    footer
      div.container
        block footer
          hr
          section.about
            !=contents['about.md'].html
          hr
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
