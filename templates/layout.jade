doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      block metatags
        meta(property="og:title", content=locals.name)
      meta(property="og:site_name", content="data4america.org")
      meta(property="og:description", content="Bringing Data Science to the understanding of Politics")
      block metaImage
        meta(property="og:image", content="https://data4america.org/img/postcard-front.jpg")

      link(rel='icon', href=contents['favicon.png'].url)
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml')
      link(href='//cdn-images.mailchimp.com/embedcode/classic-10_7.css', rel='stylesheet', type='text/css')
      != nap.css('main')


  body(class=bodyclass)

    div.nothing
    div.dimmed.pusher

      header
        block header

          div#masthead
            div.ui.large.secondary.menu
              div.ui.container
                a.item.logo(href="/")
                  img.ui.image.small(src="/img/logo-large.png")
                a.view-ui.item
                  i.sidebar.icon
                  |  Menu

                div.right.menu
                  a.item(href="/about/") About
                  a.item(href="/donate/", style="color:#CC0505;") Donate
                  a.item(href="/podcast/") Podcast
                  a.item(href="http://lifemap.io") Lifemap

            div.ui.large.secondary.menu.mobile
              a.item.logo(href="/")
                img.ui.image.small(src="/img/logo-large.png")
              div.right.menu
                a.item.nav-link
                  i.content.red.icon

            div.nav-mob MOBILE CONTENT


          div#fixed-share-btn
            a.fixed-btn.ui.huge.primary.button
              i.plus.icon
            div.ui.flowing.popup.top.left.transition.hidden
              p.ui.header Connect with
                span.dfa-text
                  |  D
                  span.f 4
                  | A

              div.fb-like(data-href='https://www.facebook.com/data4america', data-layout='button_count', data-action='like', data-size='large', data-show-faces='true')
              div.ui.divider

              a.twitter-follow-button(href='https://twitter.com/data4america', data-size='large', data-show-count='false') Follow @data4america
              div.ui.divider

              div.ui.red.fluid.button.subscribe
                i.send.outline.icon
                | Email Subscribe

          #dfa-subscribe-modal.ui.small.modal
            i.close.icon
            div.ui.header.center.aligned E-Mail Subscribe to
              span.dfa-text
                |  DATA
                span.f 4
                | AMERICA

            div#mc_embed_signup
              form#mc-embedded-subscribe-form.validate(action='//data4ameria.us11.list-manage.com/subscribe/post?u=72207b8a0819659d0b69c1f9c&id=219ac0990b', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
                #mc_embed_signup_scroll
                  .mc-field-group
                    label(for='mce-EMAIL')
                      | Email Address  
                      span.asterisk *
                    input#mce-EMAIL.required.email(type='email', value='', name='EMAIL')
                  #mce-responses.clear
                    #mce-error-response.response(style='display:none')
                    #mce-success-response.response(style='display:none')
                  div(style='position: absolute; left: -5000px;', aria-hidden='true')
                    input(type='text', name='b_72207b8a0819659d0b69c1f9c_219ac0990b', tabindex='-1', value='')
                  .clear
                    input#mc-embedded-subscribe.button(type='submit', value='Subscribe', name='subscribe')

      div#dfa-content
        div.ui.container
          block content
          block footer

      div.ui.container.text(style="margin-bottom:80px;")

        h3.ui.header(style="line-height: 1.4em; text-align: center;")
          | Help 
          span.d4a Data
            span.f(style="color:#CC0001") 4
            | America 
          |  publish Editorial Board-approved data science and data visualization about politics. 
          a.dfa-btn-donate(href="javascript:;") Make a donation.

        div#dfa-logo-footer

        div#dfa-as-seen-in
          div.as-seen-in-header
            p AS SEEN ON
          div.ui.three.column.grid.stackable.middle.aligned
            div.column.wired
              a(target="_blank", href=" https://www.facebook.com/chrisamccoy/posts/10105494115270858")
                img(src="/img/wired-logo.png")

            div.column.huffington-post
              a(target="_blank", href="http://www.huffingtonpost.com/entry/the-lifemap-of-hillary-clinton-by-data4america_us_57ba0a08e4b07d22cc38a2a2")
                img(src="/img/huffington-post-logo.png")

            div.column.facebook-live
              a(target="_blank", href="https://www.facebook.com/govgaryjohnson/videos/10153312003129364/")
                img(src="/img/facebook-live-logo.png")

      div#dfa-footer(style="display:none;")
        h3.ui.header
          a.ui.red.button.donate.dfa-btn-donate Donate 
          span.d4a Help 
            span.footer-blue DATA
            span.footer-red.f 4
            span.footer-blue AMERICA 
            | bring data science to politics.

      div#dfa-unplugged-player
        div.ui.container
          div.ui.grid
            div.nine.wide.column
              div.ui.horizontal.divided.list
                div.item
                  img.ui.avatar.image(src="/img/unplugged-gregferenstein.jpg")
                  div.content
                    div.header Greg Ferenstein
                    div.description Unplugged: Episode #1
            div.one.wide.column
              div.controls
                i.big.icons
                  i.notched.circle.loading.icon.olive
                i.big.lf-play.play.icon.olive
                i.big.lf-pause.pause.icon.olive
            div.five.wide.column
              div.progress-bar
                div.bar
                  div.progress
            div.one.wide.column
              div.time 0:00

      div#dfa-donate-modal.ui.modal(style="min-height:1200px;")
        i.close.icon
        div.content
          div.body-text

