extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + ' - '}

block social-buttons-top
  p Social buttons for article

block content
  article.article
    div.container.content-block
      include author
      h1= page.title
      if page.metadata.author
        p.author
          | #{ 'By ' }
          mixin author(page.metadata.author)
      hr
      section.content!= typogr(page.html).typogrify()
    div.container.content-block.article-footer-links
      if page.metadata.code || page.metadata.data
        if page.metadata.data
          p.data-link
            | #[a(href=page.metadata.data) Download the original data]
        if page.metadata.code
          p.code-link
            | #[a(href=page.metadata.code) Fork the code on Github]
        hr
      p
