extends layout

block prepend title
  | #{ page.title + ' - '}

block metatags
  meta(property="og:title", content="Data4America | Unplugged")

block content
  div.ui.segment(style="padding:0;")
    div#dfa-unplugged-header(style="background-color: #D9E7FF; padding: 2em 0;")
      h1.ui.header.center.aligned
        span.dfa-text DATA
          span.f 4
          | AMERICA
        |   
        span(style="font-weight:200;") Un
        span plugged
      p(style="text-align:center; font-size:1.2em;") A podcast exploring the intersection of government, technology, and the future.

    div#dfa-unplugged(style="margin:1em;")
      iframe(width="100", height="100", scrolling="no", frameborder="no")
      div.ui.divided.items
        div.lf-podcast.item(data-url="https://s3-us-west-2.amazonaws.com/media.data4america.org/Podcast1_GregFerenstein_finalMIX2.mp3")
          a.image.small.play(href="javascript:;")
            img(src="/img/unplugged-gregferenstein.jpg")
          div.content

            div.dfa-unplugged-actions
              div.play-on-heading Play on:
              a.play-on-d4a(href="javascript:;")
                i.ui.red.icon.video.play
                span.play-on Play on 
                span.dfa-text DATA
                  span.f 4
                  | AMERICA
              a(href="https://soundcloud.com/data4america/1-greg-ferenstein", target="_blank")
                i.ui.orange.icon.soundcloud
                span.play-on Play on 
                |  SoundCloud
              div.ui.divider
              a(href="/unplugged/episode-1-greg-ferenstein#transcript")
                | Read Transcript

            p.approved-by
              i.red.check.icon
              | Approved by the 
              span.dfa-text DATA
                span.f 4
                | AMERICA
              |  editorial board on 04/25/16

            a.header(href="javascript:;") Episode #1: Greg Ferenstein
            div.description
              p Editor 
                a(href="https://medium.com/the-ferenstein-wire", target="_blank")@Ferenstein Wire 
                |  // Author of 
                a(href="https://medium.com/the-ferenstein-wire/silicon-valley-s-political-endgame-summarized-1f395785f3c1?ref=producthunt#.qjsd7pxu0", target="_blank") @The Age Of Optimists
                |  // Former journalist 
                a(href="http://techcrunch.com/", target="_blank") @TechCrunch
              p 
                i.icon.twitter(style="color:#1DA1F2;")
                | Twitter: 
                a(href="https://twitter.com/ferenstein", target="_blank") @ferenstein
              p 
                i.icon.grey.mail
                | Email: 
                a(href="https://mail.google.com/mail/?view=cm&fs=1&to=greg@gregferenstein.com&su=&body=", target="_blank") greg at gregferenstein dot com
              p 
                i.icon.orange.book
                a(href="https://medium.com/the-ferenstein-wire/silicon-valley-s-political-endgame-summarized-1f395785f3c1?ref=producthunt#.qjsd7pxu0", target="_blank") Age of Optimists book: Early draft
              p 
                i.icon.red.bookmark
                | Article: 
                a(href="http://www.theatlantic.com/politics/archive/2013/02/former-political-scientist-to-congress-please-defund-political-science/273060/", target="_blank") Former Political Scientist to Congress: Please Defund Political Science 

      div.ui.divider#transcript
      h2.ui.header Transcript
      - var transcript = page.metadata.transcript
      table.ui.very.basic.collapsing.celled.table
        tbody
          each item in transcript
            tr.top.aligned
              td.disabled.right.aligned= item.time
              td
                if item.narrator
                  strong= item.narrator + ': '
                = item.text


