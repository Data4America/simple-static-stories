extends layout

block prepend title
  | #{ page.title + ' - '}

block metatags
  meta(property="og:title", content="Data4America | About")

block content

  div.ui.segment.red.dfa-about
    h1.ui.header.aligned.center About 
      span.d4a Data
        span.f(style="color:#CC0001") 4
        | America
    div.ui.divider
    article.page
      section.content!= typogr(page.html).typogrify()
      h1 Our Team
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.boardOfDirectors; });
      include teamGrid
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.founder || p.boardOfDirectors || p.editorialBoard || p.team; });
      mixin teamGrid(people)
      h1 Advisors
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.advisor; });
      mixin teamGrid(people)
      h1 Staff
      - var people = env.helpers.getPeople(contents).filter(function (p) { return p.staff; });
      mixin teamGrid(people)
