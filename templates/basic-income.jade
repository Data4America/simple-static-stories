extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  div.ui.icon.menu.inverted.red.slide-controls.top.attached
    a.item.prev.disabled
      i.chevron.left.icon
    div.item.text Step 1 of 7
    a.item.next
      i.chevron.right.icon
    div.menu.right
      a.item
        i.icon.mail
      a.item
        i.icon.facebook
      a.item
        i.icon.twitter

  div.ui.segment.attached(style="min-height:400px; overflow:hidden;")
    div.dfa-slide
      div.ui.items
        div.item(style="margin-top:3em;")
          div.image(style="width:175px;")
            img(src="/basic-income-basic-job/thumbnail-256.png")
          div.content
            h1.ui.header A new social contract: Basic Income vs. Basic Jobs
            p Create your basic income model for any geography.
            div.slide-controls(style="text-align: center; margin-top: 2em;")
              div.ui.red.button.huge.next Get Started

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 1
        |  Who are you?
      div.ui.divider
      div.ui.form
        div.two.fields
          div.field
            label First Name
            div.ui.huge.input
              input(placeholder="First Name",type="text")
          div.field
            label Last Name
            div.ui.huge.input
              input(placeholder="Last Name",type="text")
        div.field
          label Your email address
          div.ui.huge.input
            input(placeholder="Email Address",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 2
        |  What region or country are you modeling for?
      div.ui.divider
      div.ui.form
        div.field
          label Name of region of country
          div.ui.huge.input
            input(placeholder="Write in",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label What is its Wikipedia URL?
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 3
        |  How many residents live in this geography?
      div.ui.divider
      div.ui.form
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label Source URL
          div.ui.huge.input
            input(placeholder="Copy and paste the URL for this information",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 4
        |  What will the age 18 and over Basic Income be?
      div.ui.divider
      div.ui.form
        div.field
          div.ui.huge.left.labeled.input
            div.ui.label $
            input(type="text",placeholder="Amount")
        div.grouped.fields.dfa-bi-checkboxes
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="fruit",checked="",tabindex="0",class="hidden")
              label $10,000/year
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="fruit",tabindex="0",class="hidden")
              label Full time minimum wage ($14,500/year)
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="fruit",tabindex="0",class="hidden")
              label $20,000/year
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="fruit",tabindex="0",class="hidden")
              label Choose My Own
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 5
        | Use a Basic Income or a Negative Income Tax?
      div.ui.divider
      div.ui.form
        div.grouped.fields.dfa-ubi-nit
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="ubi",checked="",tabindex="0",class="hidden")
              label Universal Basic Income
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="ubi",tabindex="0",class="hidden")
              label Negative Income Tax
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 6
        |  What tax cuts do you want to make?
      div.ui.divider
      div.ui.form
        div.field
          div.ui.left.labeled.input
            div.ui.label $
            input(type="text",placeholder="Amount")
        div.grouped.fields.dfa-tax-cuts
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",checked="",tabindex="0",class="hidden")
              label $375 Billion - Eliminate redundant welfare
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $740 Billion - Eliminate tax loopholes
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $300 Billion - Cut defense spending in half
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $695 Billion - Eliminate Social Security
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $290 Billion - Eliminate Medicaid
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $290 Billion - Eliminate Medicaid
          div.field
            div.ui.toggle.checkbox
              input(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $157 Billion - Raises taxes on top 1% to 40%
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 7
        |  GDP Change
      div.ui.divider
      div.ui.form
        div.two.fields
          div.field
            label From
            div.ui.left.labeled.input
              div.ui.label $
              input(type="text",placeholder="Amount")
          div.field
            label To
            div.ui.left.labeled.input
              div.ui.label $
              input(type="text",placeholder="Amount")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 8
        |  Review your steps
      div.ui.divider
      div.ui.form
        table.ui.definition.table
          thead
            tr
              th
              th Your Selection
          tbody
            tr
              td Basic Income (per adult)
              td 
               a.changeStep(href="javascript:;",data-step="5") $25,000
            tr
              td UBI or NIT?
              td
               a.changeStep(href="javascript:;",data-step="6") NIT
            tr
              td Cuts and taxes
              td
               a.changeStep(href="javascript:;",data-step="7") $695 Billion - Eliminate Social Security
            tr
              td GDP Change
              td
               a.changeStep(href="javascript:;",data-step="8") $145,000 - $500,000
        div.field.right.slide-controls
          div.ui.white.button.prev.huge Back
          div.ui.red.button.next.huge Generate

    div.dfa-slide
      h1.ui.header Results
      div.ui.divider
      img.ui.image(src="/img/model.png")
      div.ui.divider
      div.dfa-share(style="padding-bottom:1em; text-align:center;")
        h3.ui.header Thank your generating a prediction model for Texas, USA!
        p Please share it with your friends and family.
        div.ui.grey.email.button.circular.icon
          i.icon.mail
        div.ui.facebook.button.circular.icon
          i.ui.facebook.icon
        div.ui.twitter.button.circular.icon
          i.ui.twitter.icon
        a.circular.ui.icon.button.sms.orange(href="javascript:;")
          i.icon-sms
      div.ui.action.input.fluid
        input#cliptext(type="text", value="http://data4america.org/basic-income")
        button.copy-button.ui.button(data-clipboard-target="#cliptext")
          span Copy

  div.ui.segment.inverted.grey.attached.center.aligned(style="padding: 0.4em 0.5em; font-size: 0.9em;")
    | HOW TO: Build a prediction model for your own region or country, then share.

  div.ui.segment.inverted.bottom.attached.center.aligned(style="background: #002868; padding: 0.4em 0.5em;font-size: 0.9em;")
    div.action.author
      | Model created by 
      a(href="http://dumbmatter.com/", target="_blank", style="color:white;")
        strong  Jeremy Scheff 
        img.ui.avatar.image(src="/authors/jeremy-scheff.jpg") 
      span.saperator ·
      a(href="http://datahub.io/organization/data4america#_=_", target="_blank", style="color:white; font-weight:bold;") Submit a Data Story
      span.saperator ·
      a.dfa-btn-donate(href="javascript:;", style="color:white; font-weight:bold;") Donate to D4A


