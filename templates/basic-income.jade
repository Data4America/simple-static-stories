extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  link(rel="stylesheet", type="text/css", href="/basic-income/basic-income.css")

  div!= typogr(page.html).typogrify()

  div.ui.icon.menu.inverted.red.slide-controls.top.attached
    a.item.prev.disabled
      i.chevron.left.icon
    div.item.text
    a.item.next
      i.chevron.right.icon
    div.menu.right
      a.item
        i.icon.mail
      a.item
        i.icon.facebook
      a.item
        i.icon.twitter

  div.ui.segment.attached#customize-form(style="min-height:400px; overflow:hidden;")
    div.dfa-slide
      div.ui.items
        div.item(style="margin-top:3em;")
          div.image(style="width:175px;")
            img(src="/basic-income/thumbnail-256.png")
          div.content
            h1.ui.header Modeling basic income - does it add up?
            p Create your basic income model for any geography.
            div.slide-controls(style="text-align: center; margin-top: 2em;")
              div.ui.red.button.huge.next Get Started

    div.dfa-slide
      h2.ui.header What is basic income?
      div.ui.divider
      p.dfa-slide-text Basic income is a system where the government directly gives money to all its citizens, rather than somewhat indirectly through complicated welfare programs. The idea is that removing the overhead and inefficiencies inherent in welfare programs and putting more money in the pocket of the poor could be very beneficial.
      p.dfa-slide-text Beyond that, there are many questions. Should the amount of money phase out for wealthy citizens? Which entitlements and regulations should it replace? And most importantly, how much will it cost and what will the benefits be?
      p.dfa-slide-text Mathematical modeling allows us to quantitatively state our hypothesis, evaluate its plausibility, and explore alternative options.

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 1
        |  Who are you?
      div.ui.divider
      div.ui.form
        div.two.fields
          div.field
            label First Name
            div.ui.huge.input
              input(placeholder="First Name",type="text")
          div.field
            label Last Name
            div.ui.huge.input
              input(placeholder="Last Name",type="text")
        div.field
          label Your email address
          div.ui.huge.input
            input(placeholder="Email Address",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 2
        |  What region or country are you modeling for?
      div.ui.divider
      div.ui.form
        div.field
          label Name of region of country
          div.ui.huge.input
            input(placeholder="Write in",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label What is its Wikipedia URL?
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 3
        |  Your geography details
      div.ui.divider
      div.ui.form
        p (need to collect population, minimum wage, GDP, and tax revenue as a fraction of GDP - but for now, the values for the US will be used)
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label Population
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label Minimum wage
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label GDP
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label Tax revenue (fraction of GDP)
          input(placeholder="Copy and paste the Wikipedia URL for region or country",type="text")
        div.field(style="padding: 0.6em; background: #eee; border-radius: 5px;")
          label Source URL
          div.ui.huge.input
            input(placeholder="Copy and paste the URL for this information",type="text")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 4
        |  What will the age 18 and over Basic Income be?
      div.ui.divider
      div.ui.form
        div.field
          div.ui.huge.left.labeled.input
            div.ui.label $
            input#basicIncome(type="text", disabled)
        div.grouped.fields.dfa-bi-checkboxes
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="basicIncomeType", value="10k", tabindex="0",class="hidden")
              label $10,000/year
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="basicIncomeType", value="minimumWage", tabindex="0",class="hidden")
              label Full time minimum wage ($14,500/year)
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="basicIncomeType", value="20k", tabindex="0",class="hidden")
              label $20,000/year
          div.field
            div.ui.slider.checkbox
              input(type="radio",name="basicIncomeType", value="custom", tabindex="0",class="hidden")
              label Choose My Own
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 5
        | Use a Basic Income or a Negative Income Tax?
      div.ui.divider
      div.ui.form
        div.grouped.fields.dfa-ubi-nit
          div.field
            div.ui.slider.checkbox
              input(type="radio", name="ubiOrNit", value="ubi", tabindex="0",class="hidden")
              label Universal Basic Income (Give everyone exactly the same monthly payment.)
          div.field
            div.ui.slider.checkbox
              input(type="radio", name="ubiOrNit", value="nit", tabindex="0",class="hidden")
              label Negative Income Tax (Give the full basic income only to people making $0, and gradually phase it out for people making more.)
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 6
        |  Spending cuts and tax increases
      div.ui.divider
      div.ui.form
        div.field
          div.ui.left.labeled.input
            div.ui.label $
            input#cutsTaxes(type="text", disabled)
        div.grouped.fields.dfa-tax-cuts
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesWelfare(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $375 Billion - Eliminate redundant welfare #[a(href="http://www.usbig.net/papers/144-Sheahen-RefundableTaxCredit.pdf") [1]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesLoopholes(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $740 Billion - Eliminate tax loopholes #[a(href="http://www.usbig.net/papers/144-Sheahen-RefundableTaxCredit.pdf") [1]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesDefense(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $300 Billion - Cut defense spending in half #[a(href="https://en.wikipedia.org/wiki/2010_United_States_federal_budget") [2]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesSocialSecurity(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $695 Billion - Eliminate Social Security #[a(href="https://en.wikipedia.org/wiki/2010_United_States_federal_budget") [2]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesMedicaid(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $290 Billion - Eliminate Medicaid #[a(href="https://en.wikipedia.org/wiki/2010_United_States_federal_budget") [2]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesOnePercent(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label $157 Billion - Raises taxes on top 1% to 40% #[a(href="http://www.nytimes.com/2015/10/17/business/putting-numbers-to-a-tax-increase-for-the-rich.html") [3]]
          div.field
            div.ui.toggle.checkbox
              input#cutsTaxesCustom(type="checkbox",name="fruit",tabindex="0",class="hidden")
              label
                input#cutsTaxesCustomValue(type="text", placeholder="Custom Amount")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 7
        |  GDP Change
      div.ui.divider
      p.dfa-slide-text Economic models fall largely into two categories: #[a(href="https://en.wikipedia.org/wiki/Static_analysis") static and dynamic]. Dynamic models attempt to assess how the economy will respond to a change. That may seem like a good thing, but it is a possible source of bias. For example, cutting taxes may lead to economic growth, but how much? If an answer is uncertain, a dynamic model may just represent the bias of whoever designed it. From that perspective, static models are more conservative.
      p.dfa-slide-text However, with a policy as large as basic income, static analysis may be unrealistic. Just consider the economic implications. Poor people would have much more money to spend, which could have #[a(href="http://money.cnn.com/2008/01/29/news/economy/stimulus_analysis/") a stimulatory effect similar to food stamps]. People who were previously unable to work due to ill-concieved government regulation like #[a(href="https://www.illinoispolicy.org/reports/modeling-potential-income-and-welfare-assistance-benefits-in-illinois/") welfare cliffs] could start working. #[a(href="http://apps.npr.org/unfit-for-work/") The number of Americans on disability has been rising too, at least partially due to people who want to work but make more money on disability.] Some of them would start working again if they recieved a basic income. 
      p.dfa-slide-text On the other hand, some workers may decide that their basic income revenue is enough for them and quit their jobs or work less. That would have a negative impact on the economy. So maybe the effect of basic income would actually be negative!
      p.dfa-slide-text Because of this wide range of uncertainty, the form below allows you to enter a range of possible changes in GDP that would result from the implementation of basic income. The model then assumes that tax revenue as a percentage of GDP would remain constant, resulting in additional (or decreased) revenue equal to that rate times the change in the GDP.

      div.ui.form
        div.two.fields
          div.field
            label From
            div.ui.left.labeled.input
              div.ui.label $
              input#gdpRangeMin(type="text",placeholder="Amount")
          div.field
            label To
            div.ui.left.labeled.input
              div.ui.label $
              input#gdpRangeMax(type="text",placeholder="Amount")
        div.field.right.slide-controls(style="text-align:left;")
          div.ui.white.button.prev.large Back
          div.ui.red.button.next.large Next

    div.dfa-slide
      h2.ui.header
        span.ui.red.label.large 8
        |  Review your choices
      div.ui.divider
      div.ui.form
        table.ui.definition.table
          thead
            tr
              th
              th Your Selection
          tbody
            tr
              td Basic Income (per adult)
              td 
                a.changeStep(href="javascript:;",data-step="5")
                  $#[span#reviewBasicIncome]/year
            tr
              td UBI or NIT?
              td
                a.changeStep(href="javascript:;",data-step="6")
                  span#reviewUbiOrNit
            tr
              td Cuts and tax increases
              td
                a.changeStep(href="javascript:;",data-step="7")
                  $#[span#reviewCutsTaxes]B
            tr
              td GDP Change
              td
                a.changeStep(href="javascript:;",data-step="8") #[span#reviewGdpRangeMin]% to #[span#reviewGdpRangeMax]%
        div.field.right.slide-controls
          div.ui.white.button.prev.huge Back
          div.ui.red.button.next.huge Generate

    div.dfa-slide
      h1.ui.header Results
      div.ui.divider
      div.ui.two.column.stackable.grid
        div.column
          h4 Distribution of possible costs
          div#biDist(style="width: 320px")
        div.column
          h4 Average costs/savings by component
          table.biBars#biBars

      div.ui.divider
      div.dfa-share(style="padding-bottom:1em; text-align:center;")
        h3.ui.header Thank your generating a prediction model for the USA!
        p Please share it with your friends and family.
        div.ui.grey.email.button.circular.icon
          i.icon.mail
        div.ui.facebook.button.circular.icon
          i.ui.facebook.icon
        div.ui.twitter.button.circular.icon
          i.ui.twitter.icon
        a.circular.ui.icon.button.sms.orange(href="javascript:;")
          i.icon-sms
      div.ui.action.input.fluid
        input#cliptext(type="text", value="http://data4america.org/basic-income")
        button.copy-button.ui.button(data-clipboard-target="#cliptext")
          span Copy

  div.ui.segment.inverted.grey.attached.center.aligned(style="padding: 0.4em 0.5em; font-size: 0.9em;")
    | HOW TO: Build a prediction model for your own region or country, then share.

  div.ui.segment.inverted.bottom.attached.center.aligned(style="background: #002868; padding: 0.4em 0.5em;font-size: 0.9em;")
    div.action.author
      | Model created by 
      a(href="http://dumbmatter.com/", target="_blank", style="color:white;")
        strong  Jeremy Scheff 
        img.ui.avatar.image(src="/authors/jeremy-scheff.jpg") 
      span.saperator ·
      a(href="http://datahub.io/organization/data4america#_=_", target="_blank", style="color:white; font-weight:bold;") Submit a Data Story
      span.saperator ·
      a.dfa-btn-donate(href="javascript:;", style="color:white; font-weight:bold;") Donate to D4A

  script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.6/d3.min.js")
  script(type="text/javascript", src="/basic-income/basic-income.js")