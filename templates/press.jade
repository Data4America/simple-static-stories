extends layout

block prepend title
  | #{ page.title + ' - '}

block content
  div.ui.segment
    h1.ui.aligned.center.header Press Posts
    div.ui.divider
    div#dfa-press.ui.grid
      div.four.wide.column
        div.ui.secondary.vertical.menu
          a.item.active(data-tab="press-release")
            | Press Releases
          a.item(data-tab="news-stories")
            | New Stories     
      div.twelve.wide.column
        div.ui.tab.segment.active(data-tab="press-release")
          h2.ui.header Press Releases
          div.ui.divider
          .ui.items
            .item
              .middle.aligned.content
                .header
                  | Sep 7 2016
                .description
                  p
                  | Gary Johnson LIVE from Data4America was the first of hopefully many raw deep dives into the life history of America's political, business, and civic leaders.
                .extra
                  a.ui.right.floated.button(href="https://www.facebook.com/chrisamccoy/posts/10105494115270858" target="_blank")
                    | More Information
          div.ui.divider


        div.ui.tab.segment(data-tab="news-stories")
          h2.ui.header News Stories
          div.ui.divider
          .ui.icon.message
            i.warning.circle.icon
            .content
              .header
                | No News Stories.

          
