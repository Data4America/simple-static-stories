extends layout

block content

  include author

  .ui.stackable.center.aligned.grid.container
    .fourteen.wide.column
      h2.ui.icon.header(style="color:#CC0505; font-weight:300; font-style:italic; margin: 0px 1em;")
        | A nonprofit, nonpartisan educational initiative helping people learn about government using data science, data visualization, and public conversations.

  div.ui.message(style="margin: 1em 1em; padding: 1em 1em;")
    div.header Recent Milestone:
    p(style="line-height:1.7em;")
      a(href="http://bigthink.com/" , target="_blank") BigThink.com 
      | will be the exclusive distributor of our podcast 
      a(href="/unplugged", target="_blank") Unplugged. 
      |  They'll push each interview to 700k+ unique website visitors, 2.4 Million  
      a(href="https://www.facebook.com/BigThinkdotcom", target="_blank") Facebook 
      | fans, and 100,000+ followers on 
      a(href="https://twitter.com/bigthink", target="_blank") Twitter.

  h1.ui.horizontal.divider.header.red(style="margin:2em 0 0.5em") DATA SCIENCE
  h2.ui.header.center.aligned(style="font-weight:300; font-style:italic; margin:0px 0.5em 1em;") Bringing data science to the understanding of politics
  div.dfa-feed.ui.three.column.stackable.grid
    each article in articles
      if article.metadata.isStandard
        - url = article.metadata.link ? article.metadata.link : article.url
        - ext = article.metadata.link ? true : false
        div.column
          if locals.development || article.metadata.published
            div.dfa-feed-item.article
              if article.metadata.isVerified
                img.ui.image.small.item-approved-badge(src='/img/badge.png')
              a.item-link(href=url, target=ext ? '_blank' : '_self')
                div.item-image
                  img(src=article.url + 'thumbnail.png', srcset=article.url + 'thumbnail.png 1x, ' + article.url + 'thumbnail-256.png 2x')
                div.item-meta
                  h1.ui.large.header.item-title= article.title
                  div.item-text!= article.metadata.description

              div.item-details
                mixin authorName(article.metadata.author)
                div.ui.bulleted.list
                  if article.metadata.links
                    - var links = article.metadata.links.split(',')
                    each link in links
                      - var texturl = link.split('|')
                      div.item
                        a.ui.basic.label(href=texturl[1], target='_blank')=texturl[0]
                div.item-bottom
                  if article.metadata.originals
                    img.ui.tiny.image.unplugged-image(src="/img/originals.png")
                  if article.metadata.ugp
                    img.ui.small.image.unplugged-image(src="/img/ugp.png")
                  p.item-date=moment.utc(article.date).format('MMMM D, YYYY')

    div.column
      div#dfa-donate-widget
        div.ui.segment.inverted(style="background-color:#004f81; margin:auto; border-radius:0px;")
          h1.ui.header.center.aligned(style="font-size:2.5em; font-style:italic; margin-top:0px;") Help us reach our $250,000 Season Two fundraising goal.
          h2.ui.header.center.aligned(style="font-size:1.5em; font-weight:300; margin-top:0px;") Make a tax-deductible donation.
          
        div.ui.segment(style="margin:0px auto;border-radius:0px;border:0px;box-shadow:none; text-align:center; padding: 1em 0px 0px;")
          
          div#dfa-donate-progress.ui.large.active.progress.indicating
            p(style="text-align: right; font-weight: 300; position: absolute; right: 10px; top: 10px; font-size:0.8em;") 76% remaining
            div.bar
              div.progress
              
          div#dfa-time-count.ui.statistics
          
        div.ui.segment(style="margin:0px auto;border-radius:0px;border:0px;box-shadow:none; text-align:center; padding-top:0px;")
          div.ui.equal.width.center.aligned.padded.grid
            div.row(style="padding: 0.5em 0px;")
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="10") $10
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="25") $25
            div.row(style="padding: 0.5em 0px;")
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="100") $100
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="250") $250
                
            div.row(style="padding: 0.5em 0px;")
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="500") $500
              div.column
                button.ui.fluid.button.red.huge.dfa-btn-donate(data-value="1000") $1,000
                
            div.row(style="padding: 0.5em 0px;")
              div.column
                button.ui.fluid.button.huge.blue.dfa-btn-donate(style="background-color:#004f81;") Donate Now
                
        div.ui.red.segment.inverted
          div#dfa-email-content.ui.form
            h2.ui.header.center.aligned.inverted(style="font-weight:300; font-size: 1.5em; font-style:italic;")  Join a bunch of others and have new Data4America content emailed to you.
            div.field
              input(type='email', name='email', placeholder='Email Address')
            button.ui.button.orange.fluid Send Me Content
    
          h2#subscribed-message.ui.header.center.aligned(style="font-weight:300; font-style:italic; display:none; margin:0px;") 
            i.send.icon
            | Thank you for subscribing.       

  h1.ui.horizontal.divider.header.orange(style="margin:2em 0 0.5em") UNPLUGGED
  h2.ui.header.center.aligned(style="font-weight:300; font-style:italic; margin:0px 0.5em 1em;")  A podcast exploring the intersection of government, technology, and the future.
  div.dfa-feed.ui.three.column.stackable.grid

    - var count = 0
    each article in articles
      - count++
      if article.metadata.isPodcast
        - url = article.metadata.link ? article.metadata.link : article.url
        - ext = article.metadata.link ? true : false
        div.column(class=article.metadata.columnSize ? 'column-width' : '' )
          if locals.development || article.metadata.published
            div.dfa-feed-item.podcast
              a.item-link(href=url, target=ext ? '_blank' : '_self')
                div.item-image
                  img(src=article.url + 'thumbnail.png', srcset=article.url + 'thumbnail.png 1x, ' + article.url + 'thumbnail-256.png 2x')

              div.item-link
                div.item-meta
                  div.item-text!= article.metadata.description

              div.item-details
                if article.metadata.author
                  mixin podcastAuthor(article.metadata.author)
                if article.metadata.authorExtra
                  - var details = article.metadata.authorExtra.split(',')
                  span.author
                    | Hosted by: 
                    b
                    each detail in details
                      - detail = detail.split('|') 
                        a(href='mailto:undefined')= detail[0]
                        a(href='https://twitter.com/'+detail[1], target='_blank', style='color:#4099FF;')
                          i.ui.twitter.icon(src='/img/mini-logos/twitter.png')
                
                div.ui.bulleted.list
                  if article.metadata.links
                    - var links = article.metadata.links.split(',')
                    each link in links
                      - var texturl = link.split('|')
                      div.item
                        a.ui.basic.label(href=texturl[1], target='_blank')= texturl[0]
                          if article.metadata.wired
                            img.ui.small.mini(src='/img/wired-logo.png', style="margin-left:5px; width: 70px !important; height: 15px !important;")

                div.item-bottom
                  if article.metadata.lifemap
                    img.ui.tiny.image.lifemap-image(src="/img/lifemap-logo.png")

                  if article.metadata.unplugged  
                    img.ui.tiny.image.unplugged-image(src="/img/unplugged-logo.png")
                    
                  if article.metadata.roundtable  
                    img.ui.tiny.image.roundtable-image(src="/img/roundtable-logo.png")

                  p.item-date= moment.utc(article.date).format('MMMM D, YYYY')
        
        //- if count == 2
        //-   div.column
        //-     div.ui.red.segment.inverted
        //-       div#dfa-email-content.ui.form
        //-         h2.ui.header.center.aligned.inverted(style="font-weight:300; font-size: 1.5em; font-style:italic;")  Join a bunch of others and have new Data4America content emailed to you.
        //-         div.field
        //-           input(type='email', name='email', placeholder='Email Address')
        //-         button.ui.button.orange.fluid Send Me Content
        //- 
        //-       h2#subscribed-message.ui.header.center.aligned(style="font-weight:300; font-style:italic; display:none; margin:0px;") 
        //-         i.send.icon
        //-         | Thank you for subscribing.
          
  h1#dfa-data-viz-header.ui.horizontal.divider.header(style="margin:2em 0 0.5em; color:#008e5c;") DATA VIZ
  h2.ui.header.center.aligned(style="font-weight:300; font-style:italic; margin:0px 0.5em 1em;") Bringing data visualization to the understanding of politics

  div#dfa-data-viz-tab.ui.sticky

    div.ui.fluid.selection.dropdown
      input(type='hidden', name='data')
      i.dropdown.icon
      div.default.text All
      div.menu(style="max-height:auto")
        a.item.selected(category="0") All
        a.item(category="1") Presidential Candidates
        a.item(category="2") Politicians
        a.item(category="3") Business Leaders
          
    div.ui.four.item.fluid.pointing.huge.grey.inverted.menu(style="margin:0px;")
      a.item(category="0").active All
      a.item(category="1") Presidential Candidates
      a.item(category="2") Politicians
      a.item(category="3") Business Leaders
      
      
  div#dfa-feed-viz.dfa-feed.ui.three.column.stackable.grid
    - var lifemaps = articles.filter(function(article){ return article.metadata.isLifemap; })
    - lifemaps.sort(function(a,b){ return parseInt(b.metadata.weight) - parseInt(a.metadata.weight) })
    each article in lifemaps 
      - url = article.metadata.link ? article.metadata.link : article.url
      - ext = article.metadata.link ? true : false
      div.column(category=(article.metadata.category == 'Presidential Candidate' ? "1" : (article.metadata.category == 'Politicians' ? "2" : "3" )))
        if locals.development || article.metadata.published
          div.dfa-feed-item.lifemap
            if article.metadata.isVerified
              img.ui.image.small.item-approved-badge(src='/img/badge.png')
            a.item-link(href=url, target=ext ? '_blank' : '_self')
              div.item-image
                //- if article.metadata.featured
                //-   div.dfa-sponser
                //-     span AS FEATURED ON
                //-       img(src="/img/huffington-post-logo.jpg")
                img(src=article.url + 'thumbnail.png', srcset=article.url + 'thumbnail.png 1x, ' + article.url + 'thumbnail-256.png 2x')
              div.item-meta
                h1.ui.large.header.item-title
                  span(style="color:grey;") Lifemap: 
                  = article.title

            div.item-details
              mixin authorName(article.metadata.author)
              div.item-bottom
                img.ui.tiny.image.lifemap-image(src="/img/lifemap-logo.png")
                p.item-date LAST EDIT: 
                  = moment.utc(article.metadata.lastEdit).format('MMMM D, YYYY')


