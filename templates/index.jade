extends layout

block content
  include author
  each article in articles
    article.article.intro
      div.container.content-block
        header
          img.pull-left.article-thumbnail(src=article.url + 'thumbnail.png', srcset=article.url + 'thumbnail.png 1x, ' + article.url + 'thumbnail-256.png 2x')
          h1
            a(href=article.url)= article.title
          p.date
            | Published: 
            span= moment.utc(article.date).format('YYYY-MM-DD')
          div.clearfix
          p.author
            mixin author(article.metadata.author)
        hr
        section.content
          if article.intro.length > 0
            != typogr(article.intro).typogrify()
          if article.hasMore
            p.more
              a(href=article.url) more

block footer
  div.container.content-block
    p
      if prevPage
        a(href=prevPage.url) « Newer
      else
        a(href='/archive') « Archive
      if nextPage
        a(href=nextPage.url) Next page »
